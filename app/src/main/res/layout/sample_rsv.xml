<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="5dp"
    android:background="@color/lavender">

    <ImageView
        android:id="@+id/beautifulView"
        android:layout_width="222dp"
        android:layout_height="170dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iimage" />

    <TextView
        android:id="@+id/beautyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Beautiful View"
        android:textColor="#050505"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/beautifulView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beautyBody"
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="But Not Earth"
        app:layout_constraintStart_toEndOf="@+id/beautifulView"
        app:layout_constraintTop_toBottomOf="@+id/beautyTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>